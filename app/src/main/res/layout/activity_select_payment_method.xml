<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.technotoil.ticket.homefragments.eventdetailscreen.tickes.addone.promocode.applyedcode.summary.payment.addwalletamount.SelectPaymentMethodModel" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_13"
                android:layout_marginTop="@dimen/margin_10"
                android:src="@drawable/arrow"/>


            <RelativeLayout
                android:id="@+id/header_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/headind_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_horizontal"
                    android:text="Add amount"
                    android:textColor="@color/btn_text_color"
                    android:textFontWeight="500"
                    android:textSize="16dp" />


            </RelativeLayout>


        </LinearLayout>
    <TextView
        android:id="@+id/sub_headind_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:layout_gravity="center"
        android:text="in TG wallet"
        android:textColor="@color/text_para_color"
        android:textFontWeight="500"
        android:textSize="12dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_10"
            android:background="#E6E8EC" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_currency_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/poppins_medium"
            android:text="Select Currency"
            android:textColor="@color/text_para_color"
            android:textFontWeight="500"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/select_currency_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/select_currency_text"
            android:fontFamily="@font/poppins_medium"
            android:text="*"
            android:layout_marginTop="@dimen/margin_3"
            android:textColor="@color/red_dark"
            android:textFontWeight="500"
            android:textSize="@dimen/size_12" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:background="@drawable/edit_text_border">

        <TextView
            android:id="@+id/select_currency_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Canadian dollar CAD $"
            android:textColor="@color/text_para_color"
            android:textFontWeight="400"
            android:textSize="@dimen/size_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_16"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_currency_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/poppins_medium"
            android:text="Add Amount"
            android:textColor="@color/text_para_color"
            android:textFontWeight="500"
            android:textSize="@dimen/size_12" />

        <TextView
            android:id="@+id/select_currency_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/select_currency_text3"
            android:fontFamily="@font/poppins_medium"
            android:text="*"
            android:layout_marginTop="@dimen/margin_3"
            android:textColor="@color/red_dark"
            android:textFontWeight="500"
            android:textSize="@dimen/size_12" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:background="@drawable/edit_text_border">

        <TextView
            android:id="@+id/select_currency_field3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppins_medium"
            android:text="$ |  1000.00"
            android:textColor="@color/text_para_color"
            android:textFontWeight="400"
            android:textSize="@dimen/size_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/down"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_16"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/ADD_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_marginStart="@dimen/margin_16"
        android:fontFamily="@font/poppins_medium"
        android:text="ADD WITH DIGITAL WALLET"
        android:layout_marginBottom="@dimen/margin_8"
        android:textColor="@color/text_para_color"
        android:textFontWeight="500"
        android:textSize="12dp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/paymentshape">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox_wallet"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_14"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginStart="@dimen/margin_16"
                android:textColor="@color/btn_text_color"
                android:textFontWeight="500"
                android:paddingStart="@dimen/margin_10"
                android:text="Add with UPI"/>


            <ImageView
                android:layout_width="@dimen/size_15"
                android:layout_height="@dimen/size_15"
                android:src="@drawable/up_arrow"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_25" />

            <androidx.cardview.widget.CardView
                android:id="@+id/payment_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_below="@+id/checkbox_wallet"
                android:background="@color/white">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/apple_card"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/apple"
                            android:drawableStart="@drawable/appleicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/margin_16"
                            android:layout_marginStart="@dimen/margin_20"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/margin_5"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Apple Pay"
                            android:textColor="@color/btn_text_color"
                            android:textFontWeight="500"
                            android:textSize="16dp" />


                        <CheckBox
                            android:id="@+id/checkbox"
                            style="@style/CustomCheckbox02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:gravity="center_vertical" />

                        <View
                            android:id="@+id/view00"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:layout_marginStart="@dimen/margin_16"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_below="@+id/apple"
                            android:background="#E6E8EC" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/apple_card"
                        android:id="@+id/apple_card2"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/apple2"
                            android:drawableStart="@drawable/google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/margin_16"
                            android:layout_marginStart="@dimen/margin_20"
                            android:gravity="center_vertical"
                            android:layout_marginTop="@dimen/margin_5"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Google Pay"
                            android:textColor="@color/btn_text_color"
                            android:textFontWeight="500"
                            android:textSize="16dp" />


                        <CheckBox
                            android:id="@+id/checkbox2"
                            style="@style/CustomCheckbox02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:gravity="center_vertical" />
                        <View
                            android:id="@+id/view002"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_below="@+id/apple2"
                            android:background="#E6E8EC" />

                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MORE WAYS TO ADD"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_23"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/text_para_color"
        android:textFontWeight="500"
        android:textSize="12dp"/>
            <RelativeLayout
                android:id="@+id/card_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/paymentshape">



                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkbox_wallet2"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginStart="@dimen/margin_16"
                    android:textColor="@color/btn_text_color"
                    android:textFontWeight="500"
                    android:paddingStart="@dimen/margin_10"
                    android:fontFamily="@font/poppins_medium"
                    android:checked="true"
                    android:text="Add with Debit/Credit/ATM Cards"/>


                <ImageView
                    android:id="@+id/up_arrow"
                    android:layout_width="@dimen/size_15"
                    android:layout_height="@dimen/size_15"
                    android:src="@drawable/up_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginEnd="@dimen/margin_25" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/payment_card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:layout_below="@+id/checkbox_wallet2"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/card_number_layout"
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/margin_16"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/card_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_6"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Card Number"
                                android:textColor="@color/text_para_color"
                                android:textFontWeight="400"
                                android:textSize="12dp" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_48"
                                android:layout_below="@+id/card_number">
                                <AutoCompleteTextView
                                    android:id="@+id/autoCompleteTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/edit_text_border"
                                    android:paddingEnd="@dimen/margin_16"
                                    android:paddingLeft="@dimen/margin_10"
                                    android:inputType="number"
                                    android:textSize="@dimen/text_14"
                                    android:textColor="@color/btn_text_color"
                                    android:textFontWeight="400"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="Enter Your Card Number"
                                    android:drawableEnd="@drawable/master"
                                    android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>



                            </RelativeLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/margin_16"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/fullname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_16"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Full Name"
                                android:textColor="@color/text_para_color"
                                android:textFontWeight="400"
                                android:textSize="12dp" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_48"
                                android:layout_below="@+id/fullname">
                                <AutoCompleteTextView
                                    android:id="@+id/autoCompleteTextView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:textColor="@color/btn_text_color"
                                    android:background="@drawable/edit_text_border"
                                    android:paddingEnd="@dimen/margin_16"
                                    android:paddingLeft="@dimen/margin_10"
                                    android:inputType="text"
                                    android:textSize="@dimen/text_14"
                                    android:textFontWeight="400"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="Full Name"
                                    android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>



                            </RelativeLayout>





                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginStart="@dimen/margin_16"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="@dimen/margin_16"
                                android:weightSum="2">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/margin_8"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/Expiry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_16"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="Expiry"
                                        android:textColor="@color/text_para_color"
                                        android:textFontWeight="400"
                                        android:textSize="12dp" />


                                    <AutoCompleteTextView
                                        android:id="@+id/dateexpire"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edit_text_border"
                                        android:paddingEnd="@dimen/margin_16"
                                        android:paddingLeft="@dimen/margin_10"
                                        android:inputType="date"
                                        android:hint="05/2024"
                                        android:textSize="@dimen/text_14"
                                        android:textFontWeight="400"
                                        android:textColor="@color/btn_text_color"

                                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_8"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/cvv"
                                        android:layout_width="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin_16"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="CVC/CVV"
                                        android:textColor="@color/text_para_color"
                                        android:textFontWeight="500"
                                        android:textSize="12dp" />


                                    <AutoCompleteTextView
                                        android:id="@+id/cvvdate"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/edit_text_border"
                                        android:paddingEnd="@dimen/margin_16"
                                        android:paddingLeft="@dimen/margin_10"
                                        android:inputType="number"
                                        android:hint="326"
                                        android:maxLength="3"
                                        android:textSize="@dimen/text_14"
                                        android:textFontWeight="400"
                                        android:textColor="@color/btn_text_color"
                                        android:theme="@android:style/Theme.Holo.Light.DarkActionBar"/>


                                </LinearLayout>






                            </LinearLayout>





                        </RelativeLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Atm_card_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:visibility="visible"
                android:background="@drawable/edit_text_border"
                android:layout_margin="@dimen/margin_16"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_more_pay"
                    style="@style/CustomCheckbox02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_5"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/margin_8"
                    android:text="Pay with Debit/Credit/ATM Cards"
                    android:textColor="@color/btn_text_color"
                    android:textFontWeight="500"
                    android:textSize="@dimen/text_14" />

                <ImageView
                    android:id="@+id/spinner_arrow"
                    android:layout_width="15dp"
                    android:layout_height="@dimen/size_10"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:background="@drawable/down"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/margin_30"
                android:layout_marginBottom="@dimen/margin_13"
                android:background="@drawable/bg_gradient">


                <TextView
                    android:id="@+id/btnText"
                    style="@style/mediumButtonText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Proceed to add CA$1000.00"
                    android:textFontWeight="500" />

                <ImageView
                    android:layout_width="@dimen/size_14"
                    android:layout_height="@dimen/size_14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_toEndOf="@+id/btnText"
                    android:contentDescription="@string/social_icon"
                    android:src="@drawable/array_right" />

                <!--                <ProgressBar-->
                <!--                    android:id="@+id/pBar"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_centerInParent="true"/>-->

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
</layout>