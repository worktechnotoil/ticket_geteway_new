        <RelativeLayout
            android:id="@+id/password"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email2"
            android:layout_marginHorizontal="@dimen/margin_25"
            android:layout_marginTop="16dp">


            <EditText
                android:id="@+id/edit"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_54"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingLeft="10dp"
                android:paddingEnd="@dimen/size_12"
                android:textColor="#00322E"
                android:textFontWeight="400"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/showPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_showpass"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/hidePassword_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/hidepasswordicon"
                android:visibility="visible" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:layout_below="@+id/password"
            android:layout_marginHorizontal="@dimen/margin_25"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_gradient">

            <TextView
                android:id="@+id/btnText"
                style="@style/mediumButtonText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_medium"
                android:text="Continue"
                android:textFontWeight="500" />

            <ImageView
                android:layout_width="@dimen/size_14"
                android:layout_height="@dimen/size_14"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_10"
                android:layout_toEndOf="@+id/btnText"
                android:contentDescription="@string/social_icon"
                android:src="@drawable/array_right" />
            <ProgressBar
                android:id="@+id/pBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>

