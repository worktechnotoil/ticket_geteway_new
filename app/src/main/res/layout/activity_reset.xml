        <RelativeLayout
            android:id="@+id/password1"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailt"
            android:layout_marginHorizontal="@dimen/margin_25"
            android:layout_marginTop="16dp">


            <EditText
                android:id="@+id/edit_pass2"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_54"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingLeft="10dp"
                android:paddingEnd="@dimen/size_12"
                android:textColor="#00322E"
                android:textFontWeight="400"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/showPassword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_showpass"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/hidePassword_one1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/hidepasswordicon"
                android:visibility="visible" />


        </RelativeLayout>


        <TextView
            android:id="@+id/email2"
            style="@style/mediumButtonText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password1"
            android:layout_marginHorizontal="@dimen/margin_25"
            android:layout_marginTop="20dp"
            android:text="Confirm New password"
            android:textColor="#5A6872"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="25dp" />


