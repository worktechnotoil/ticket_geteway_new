<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <data>
            <variable
                name="viewModel"
                type="com.technotoil.ticket.ui.reset.ResetModel" />
        </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ImageVie"
            android:layout_width="52dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_marginLeft="13dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            style="@style/mediumButtonText14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Reset password"
            android:textColor="#0B2338"
            android:textFontWeight="500"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textVie"
            style="@style/mediumButtonText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginHorizontal="@dimen/margin_25"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_medium"
            android:padding="@dimen/size_5"
            android:text="Donâ€™t worry! it happens, Please enter the Email associated with your account."
            android:textColor="#5A6872"
            android:textFontWeight="400"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_editor_absoluteX="0dp" />




        <TextView
            android:id="@+id/emailt"
            style="@style/mediumButtonText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textVie"
            android:layout_marginHorizontal="@dimen/margin_25"
            android:text="New Password"
            android:textColor="#5A6872"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="25dp" />


