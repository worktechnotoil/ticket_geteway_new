<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.technotoil.ticket.homefragments.eventdetailscreen.tickes.TicketsQuentitymodel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/welcome_bg"
    tools:context=".homefragments.eventdetailscreen.tickes.TicketsQuentityMainActivity">
            <RelativeLayout
                android:id="@+id/rl22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/header_relative"
                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ImageVie"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="@dimen/margin_23"
                            android:src="@drawable/arrow"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/headind_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_16"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Sunburn reload"
                            android:textColor="@color/dark_blue"
                            android:textFontWeight="500"
                            android:textSize="14dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headind_main"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Saturday, March 18 â€¢ 6:00 AM"
                            android:layout_centerInParent="true"
                            android:textColor="@color/text_para_color"
                            android:textFontWeight="400"
                            android:layout_marginBottom="@dimen/margin_12"
                            android:textSize="@dimen/size_12" />
                    </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_250"
                    android:layout_below="@+id/header_relative" />
            </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_50"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/welcome_bg"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:background="@drawable/edit_text_border"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/size_5">

                    <LinearLayout
                        android:id="@+id/count_layout4"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_10"
                            android:gravity="center"
                            android:src="@drawable/refundicon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_12"
                            android:layout_marginEnd="@dimen/margin_16"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Refund Policy : Refund available until 7 day before the event"
                            android:textColor="@color/text_para_color"
                            android:textFontWeight="400"
                            android:textSize="14dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_75"
                    android:layout_below="@+id/card4"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16">

                    <CheckBox
                        android:id="@id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/blue_text" />

                    <TextView
                        android:id="@+id/i_have"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@+id/checkbox"
                        android:fontFamily="@font/poppins_medium"
                        android:text="I have accepted the"
                        android:textColor="@color/text_para_color"
                        android:textFontWeight="400"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:id="@+id/refund_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@+id/i_have"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Refund Policy, Terms of service"
                        android:textColor="@color/blue_text"
                        android:textFontWeight="400"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_toRightOf="@+id/refund_policy"
                        android:fontFamily="@font/poppins_medium"
                        android:text="and"
                        android:textColor="@color/text_para_color"
                        android:textFontWeight="400"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:id="@+id/policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/i_have"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_toRightOf="@+id/checkbox"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Privacy Policy"
                        android:textColor="@color/blue_text"
                        android:textFontWeight="400"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/i_have"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_toRightOf="@+id/policy"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="2"
                        android:text=". I agree that Ticketgateway may"
                        android:textColor="@color/text_para_color"
                        android:textFontWeight="400"
                        android:textSize="@dimen/size_12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/policy"
                        android:layout_toRightOf="@+id/checkbox"
                        android:fontFamily="@font/poppins_medium"
                        android:text="share my information with the event organizer"
                        android:textColor="@color/text_para_color"
                        android:textFontWeight="400"
                        android:textSize="@dimen/size_12" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/linearlast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_23"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/onwerd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_23"
                        android:src="@drawable/down" />

                    <TextView
                        android:id="@+id/case2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/margin_16"
                        android:fontFamily="@font/poppins_medium"
                        android:text="CA$100"
                        android:textColor="@color/dark_blue"
                        android:textFontWeight="400"
                        android:textSize="@dimen/text_16" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_16">

                    <TextView
                        android:id="@+id/ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_18"
                        android:background="@drawable/fireshape"
                        android:drawableLeft="@drawable/fire"
                        android:drawablePadding="@dimen/margin_8"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_16"
                        android:paddingEnd="@dimen/margin_16"
                        android:text="Few Tickets Left"
                        android:textColor="@color/btn_text_color"
                        android:textFontWeight="400">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:fontFamily="@font/poppins_medium"
                android:text="By clicking on continue, I agree to the"
                android:textColor="@color/dark_blue"
                android:textFontWeight="400"
                android:textSize="@dimen/text_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_16"
                android:fontFamily="@font/poppins_medium"
                android:text="TicketGateway Terms of Services."
                android:textColor="@color/blue_text"
                android:textFontWeight="400"
                android:textSize="@dimen/text_14" />

            <RelativeLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/margin_13"
                android:layout_marginBottom="@dimen/margin_13"
                android:background="@drawable/bg_gradient">


                <TextView
                    android:id="@+id/btnText"
                    style="@style/mediumButtonText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Continue"
                    android:textFontWeight="500" />

                <ImageView
                    android:layout_width="@dimen/size_14"
                    android:layout_height="@dimen/size_14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_toEndOf="@+id/btnText"
                    android:contentDescription="@string/social_icon"
                    android:src="@drawable/array_right" />

                <!--                <ProgressBar-->
                <!--                    android:id="@+id/pBar"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_centerInParent="true"/>-->

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
    </layout>