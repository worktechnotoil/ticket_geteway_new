<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.technotoil.ticket.homefragments.eventdetailscreen.tickes.addone.promocode.applyedcode.summary.payment.PaymentFailedModel"/>
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/faieldtransaction"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_45"/>


            <TextView
                android:id="@+id/thanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:text="Transaction Failed"
                android:layout_gravity="center"
                android:textColor="@color/dark_blue"
                android:textFontWeight="500"
                android:textSize="24dp" />
            <TextView
                android:id="@+id/amount_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_40"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:text="1 Ticket(S) with amount CAD $100.00"
                android:layout_gravity="center"
                android:textColor="@color/text_para_color"
                android:textFontWeight="600"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/order_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:text="Ticket for Order Id #32916222 has been sent to sample@gmail.com"
                android:layout_gravity="center"
                android:textColor="@color/text_para_color"
                android:textFontWeight="600"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/refund_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_horizontal"
                    android:text="Refund Policy: "
                    android:layout_gravity="center"
                    android:textColor="@color/btn_text_color"
                    android:textFontWeight="400"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/no_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_horizontal"
                    android:text="No Refund at anytime"
                    android:layout_gravity="center"
                    android:textColor="@color/btn_text_color"
                    android:textFontWeight="600"
                    android:textSize="14dp" />



            </LinearLayout>

            <TextView
                android:id="@+id/view_ticket"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_48"
                android:layout_marginTop="@dimen/margin_16"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:background="@drawable/edit_text_border"
                android:text="View my Ticket"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/margin_30"
                android:paddingRight="@dimen/margin_30"
                android:paddingTop="@dimen/margin_12"
                android:textColor="@color/blue_text"
                android:textFontWeight="500"
                android:textSize="14dp" />
            <RelativeLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/margin_50"
                android:layout_marginBottom="@dimen/margin_13"
                android:background="@drawable/bg_gradient">


                <TextView
                    android:id="@+id/btnText"
                    style="@style/mediumButtonText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Retry Payment"
                    android:textFontWeight="500" />
                <!--                <ProgressBar-->
                <!--                    android:id="@+id/pBar"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_centerInParent="true"/>-->

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_my_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_alignParentBottom="true"
                android:background="@drawable/edit_text_border"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="@dimen/margin_13">


                <TextView
                    android:id="@+id/my_account_btnText"
                    style="@style/mediumButtonText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Go to my account"
                    android:textFontWeight="500" />

            </RelativeLayout>


            <TextView
                android:id="@+id/discription"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_48"
                android:layout_marginTop="@dimen/margin_16"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:text="Refund are issued by the organizers, if you need any assistance with a refund, please Contact Us first, before you call your bank.  Thank you for using Ticketgateway.com"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/margin_20"
                android:textColor="@color/text_para_color"
                android:textFontWeight="400"
                android:textSize="12dp" />

            <RelativeLayout
                android:id="@+id/need_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/margin_13"
                android:layout_marginBottom="@dimen/margin_13">


                <TextView
                    android:id="@+id/need"
                    style="@style/mediumButtonText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Need Help? Contact Us"
                    android:textColor="@color/blue_text"
                    android:textFontWeight="500" />

                <ImageView
                    android:layout_width="@dimen/size_14"
                    android:layout_height="@dimen/size_14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_toEndOf="@+id/need"
                    android:src="@drawable/left" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>