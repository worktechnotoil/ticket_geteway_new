<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.technotoil.ticket.homefragments.sidemenufragments.artists.orginizer.orgizeactivity.OrginizerModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ImageVie"
            android:layout_width="52dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_marginLeft="13dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/artist_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/poppins_medium"
            android:text="Organizers"
            android:textColor="@color/dark_blue"
            android:textFontWeight="500"
            android:textSize="@dimen/text_16" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/artist_text"
            android:layout_marginTop="@dimen/margin_16"
            android:background="#E6E8EC">

        </View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artist_text"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_30"
            android:fontFamily="@font/poppins_medium"
            android:text="Trending Organizers"
            android:textColor="@color/heading_text"
            android:textFontWeight="600"
            android:textSize="@dimen/size_14" />

        <TextView
            android:layout_below="@+id/artist_text"
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/poppins_medium"
            android:text="See all"
            android:textColor="@color/blue_text"
            android:textFontWeight="500"
            android:textSize="@dimen/size_14" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/see_all"
            android:id="@+id/recycler_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>


        <TextView
            android:id="@+id/Suggested"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_horizontal"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:fontFamily="@font/poppins_medium"
            android:text="Suggested for you"
            android:textColor="@color/heading_text"
            android:textFontWeight="600"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/see_all2"
            android:layout_below="@+id/recycler_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/poppins_medium"
            android:text="See all"
            android:textColor="@color/blue_text"
            android:textFontWeight="500"
            android:textSize="@dimen/size_14" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/see_all2"
            android:layout_marginTop="@dimen/margin_20" />

    </RelativeLayout>
</layout>