<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_images"
            android:layout_width="84dp"
            android:layout_marginTop="@dimen/margin_12"
            app:cardCornerRadius="4dp"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_height="@dimen/size_40">

            <ImageView
                android:id="@+id/images"
                android:layout_width="84dp"
                android:layout_height="@dimen/size_40"
                android:src="@drawable/flowers"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="@dimen/margin_12"
    android:layout_marginEnd="@dimen/margin_16"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/heading"
        android:layout_width="91dp"
        android:layout_height="@dimen/size_30"
        android:background="@drawable/followshape"
        android:fontFamily="@font/poppins_medium"
        android:text="manage"
        android:padding="@dimen/size_5"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/dark_blue"
        android:textFontWeight="500"
        android:textSize="@dimen/size_14">


    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_gravity="center"
        android:src="@drawable/bluedotmenu"/>

</LinearLayout>



        <TextView
            android:id="@+id/name_orginize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="@dimen/margin_8"
            android:textFontWeight="500"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/card_images"
            android:text="Sunburn reload NYE, Created by three organizers, Lakefront, Toronto" />
        <TextView
            android:id="@+id/live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green_color"
            android:layout_marginTop="@dimen/margin_8"
            android:textFontWeight="500"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/name_orginize"
            android:text="Live" />

        <LinearLayout
            android:id="@+id/layout_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/live"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user"/>
            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_para_color"
                android:textFontWeight="500"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/size_14"
                android:layout_marginStart="@dimen/margin_8"
                android:text="Start:" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_para_color"
                android:textFontWeight="400"
                android:layout_marginStart="@dimen/margin_8"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/size_14"
                android:layout_below="@+id/name_orginize"
                android:text="Mar 12" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_35"
                android:src="@drawable/enduser"/>
            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_para_color"
                android:textFontWeight="500"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/size_14"
                android:layout_marginStart="@dimen/margin_8"
                android:text="End:" />

            <TextView
                android:id="@+id/end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_para_color"
                android:textFontWeight="400"
                android:layout_marginStart="@dimen/margin_8"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/size_14"
                android:layout_below="@+id/name_orginize"
                android:text="Mar 20" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_below="@+id/layout_horizontal">
            <ProgressBar
                android:id="@+id/simpleProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_2"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/progress_color"
                android:layout_weight="1.9"
                android:layout_gravity="center"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_weight="0.1"
                android:fontFamily="@font/poppins_medium"
                android:textFontWeight="400"
                android:textSize="@dimen/size_14"
                android:textColor="@color/text_para_color"
                android:text="10/20"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/relative_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@+id/progressBarLayout">
            <LinearLayout
                android:id="@+id/date_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textFontWeight="400"
                    android:layout_marginTop="@dimen/margin_16"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/text_para_color"
                    android:text="Last updated:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_9"
                    android:fontFamily="@font/poppins_medium"
                    android:textFontWeight="500"
                    android:layout_marginTop="@dimen/margin_16"
                    android:textSize="@dimen/size_14"
                    android:textColor="@color/text_para_color"
                    android:text="20 Feb, 2023"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/margin_16">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img1"
                        android:background="@drawable/circleimgs"
                        android:layout_width="@dimen/size_32"
                        android:layout_height="32dp"
                        android:padding="@dimen/margin_3"
                        android:layout_marginEnd="-15dp"
                        android:src="@drawable/profileimg"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img2"
                        android:background="@drawable/circleimgs"
                        android:layout_width="@dimen/size_32"
                        android:padding="@dimen/margin_3"
                        android:layout_height="@dimen/size_32"
                        android:layout_toRightOf="@+id/img1"
                        android:layout_marginEnd="-15dp"
                        android:src="@drawable/profileimg"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img3"
                        android:background="@drawable/circleimgs"
                        android:layout_width="@dimen/size_32"
                        android:padding="@dimen/margin_3"
                        android:layout_height="@dimen/size_32"
                        android:layout_toRightOf="@+id/img2"
                        android:src="@drawable/profileimg"/>
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relative_date"
            android:layout_marginStart="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_12"
            android:layout_marginBottom="@dimen/margin_12"
            android:background="#E6E8EC">
        </View>


    </RelativeLayout>

</RelativeLayout>