<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.technotoil.ticket.homefragments.sidemenufragments.artists.trendingvenues.TrendingVenuesDataModel" />
    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_60">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/bank_account_scroll_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_60"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:fontFamily="@font/poppins_medium"
            android:text="Trending Venues"
            android:textColor="@color/heading_text"
            android:textFontWeight="600"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginEnd="28dp"
            android:fontFamily="@font/poppins_medium"
            android:text="See all"
            android:textColor="@color/blue_text"
            android:textFontWeight="500"
            android:textSize="@dimen/size_14" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/see_all"
            android:id="@+id/recycler_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>




    </RelativeLayout>
        <LinearLayout
            android:id="@+id/viewmoretext"
            android:layout_below="@+id/rl1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_30"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viewmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_18"
                android:fontFamily="@font/poppins_medium"
                android:textFontWeight="400"
                android:textColor="@color/blue_text"
                android:text="View more events"/>
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:src="@drawable/left"
                />
        </LinearLayout>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>