<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.technotoil.ticket.ui.signUp.CreateAccountModel" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signUp.CreateAccountActivity">


    <LinearLayout
        android:id="@+id/ImageVie"
        android:layout_width="52dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_marginLeft="13dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        style="@style/mediumButtonText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Create account"
        android:textColor="#0B2338"
        android:textFontWeight="500"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="@dimen/margin_16"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/poppins_medium"
            android:text="Full Name"
            android:textColor="#5A6872"
            android:textFontWeight="400"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:layout_marginTop="@dimen/margin_4"
            android:digits="0123456789qwertzuiopasdfghjklyxcvbnm ABCDEFGHIJKLMNOPQRSTUVXWYZ"
            android:background="@drawable/edit_text_border"
            android:fontFamily="@font/poppins_regular"
            android:hint="Enter full name"
            android:lines="1"
            android:paddingLeft="10dp"
            android:textColorHint="@color/hint_color"
            android:textFontWeight="400"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/poppins_medium"
            android:text="Mobile Number"
            android:textColor="#5A6872"
            android:textFontWeight="400"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mob"



            android:background="@drawable/edit_text_border">

            <com.hbb20.CountryCodePicker
                android:id="@+id/countyCodePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#00322E"
                android:textFontWeight="500"
                app:ccp_areaCodeDetectedCountry="true"
                app:ccp_autoDetectCountry="true"
                app:ccp_countryAutoDetectionPref="SIM_NETWORK"
                app:ccp_showNameCode="false"
                app:ccp_textSize="@dimen/text_16">

            </com.hbb20.CountryCodePicker>

            <ImageView
                android:id="@+id/single_line"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_toRightOf="@id/countyCodePicker"
                android:src="@drawable/ic_singleline"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_toRightOf="@id/single_line"
                android:background="@null"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter Mobile"
                android:inputType="number"
                android:lines="1"
                android:maxLength="12"
                android:paddingLeft="10dp"
                android:textColor="#0B2338"
                android:textColorHint="@color/hint_color"
                android:textFontWeight="400"
                android:textSize="14sp" />

        </LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/poppins_medium"
            android:text="Email Address"
            android:textColor="#5A6872"
            android:textFontWeight="400"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/edit_text_border"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="Email Address"
            android:lines="1"
            android:paddingLeft="10dp"
            android:textColorHint="@color/hint_color"
            android:textFontWeight="400"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/poppins_medium"
            android:text="Password"
            android:textColor="#5A6872"
            android:textFontWeight="400"
            android:textSize="12sp" />

<!--        <EditText-->
<!--            android:id="@+id/password"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/size_48"-->
<!--            android:layout_marginTop="@dimen/margin_4"-->
<!--            android:background="@drawable/edit_text_border"-->
<!--            android:fontFamily="@font/poppins_regular"-->
<!--            android:hint="Enter Password"-->
<!--            android:inputType="textPassword"-->
<!--            android:lines="1"-->
<!--            android:paddingLeft="10dp"-->
<!--            android:textColorHint="@color/hint_color"-->
<!--            android:textFontWeight="400"-->
<!--            android:textSize="14sp" />-->

        <RelativeLayout
            android:id="@+id/password1"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailt"
            android:layout_marginTop="4dp">


            <EditText
                android:id="@+id/edit_pass2"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_54"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingLeft="10dp"
                android:paddingEnd="@dimen/size_12"
                android:textColor="#00322E"
                android:textFontWeight="400"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/showPassword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_showpass"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/hidePassword_one1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/hidepasswordicon"
                android:visibility="visible" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/margin_20"
            android:fontFamily="@font/poppins_medium"
            android:text="Confirm Password"
            android:textColor="#5A6872"
            android:textFontWeight="400"
            android:textSize="12sp" />

<!--        <EditText-->
<!--            android:id="@+id/confirm_password"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/size_48"-->
<!--            android:layout_marginTop="@dimen/margin_4"-->
<!--            android:background="@drawable/edit_text_border"-->
<!--            android:fontFamily="@font/poppins_regular"-->
<!--            android:hint="Enter Password"-->
<!--            android:inputType="textPassword"-->
<!--            android:lines="1"-->
<!--            android:paddingLeft="10dp"-->
<!--            android:textColorHint="@color/hint_color"-->
<!--            android:textFontWeight="400"-->
<!--            android:textSize="14sp" />-->


        <RelativeLayout
            android:id="@+id/password"
            style="@style/editTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email2"
            android:layout_marginTop="4dp">


            <EditText
                android:id="@+id/edit"
                style="@style/editTextStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_54"
                android:fontFamily="@font/poppins_regular"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingLeft="10dp"
                android:paddingEnd="@dimen/size_12"
                android:textColor="#00322E"
                android:textFontWeight="400"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/showPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_showpass"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/hidePassword_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:src="@drawable/hidepasswordicon"
                android:visibility="visible" />


        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/createaccunt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/margin_25"
        android:layout_marginBottom="@dimen/margin_20"
        android:background="@drawable/bg_gradient">

        <TextView
            android:id="@+id/btnText"
            style="@style/mediumButtonText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/poppins_medium"
            android:text="Create Account"
            android:textColor="#0B2338"
            android:textFontWeight="500" />
        <ProgressBar
            android:id="@+id/pBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>

</RelativeLayout>

</layout>