<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.technotoil.ticket.homefragments.sidemenufragments.artists.trendingvenues.VenuesModel" />
    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/bank_account_scroll_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ImageVie"
                        android:layout_width="52dp"
                        android:layout_marginTop="25dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow"
                            android:layout_marginLeft="13dp"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/artist_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_20"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Trending Venues"
                        android:textColor="@color/dark_blue"
                        android:textFontWeight="500"
                        android:textSize="@dimen/text_16" />
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/artist_text"
                        android:layout_marginTop="@dimen/margin_16"
                        android:background="#E6E8EC">

                    </View>



                    <TextView
                        android:id="@+id/trading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_16"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Trending Venues"
                        android:layout_below="@+id/view"
                        android:textColor="@color/heading_text"
                        android:textFontWeight="600"
                        android:textSize="@dimen/size_14" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@+id/trading"
                        android:id="@+id/recycler_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>



                    <LinearLayout
                        android:id="@+id/viewmoretext"
                        android:layout_below="@+id/recycler_data"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_30"
                        android:layout_marginBottom="@dimen/margin_30"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/viewmore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_18"
                            android:fontFamily="@font/poppins_medium"
                            android:textFontWeight="400"
                            android:textColor="@color/blue_text"
                            android:text="View more events"/>
                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:src="@drawable/left"/>
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>