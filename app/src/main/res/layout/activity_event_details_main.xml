<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.technotoil.ticket.homefragments.eventdetailscreen.EventModel" />
    </data>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".homefragments.eventdetailscreen.EventDetailsMainActivity">

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/bank_account_scroll_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:id="@+id/rl22"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_20"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ImageVie"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_20">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow"
                                android:layout_marginLeft="13dp"
                                android:textSize="14sp"/>
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:paddingRight="@dimen/margin_15"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Event"
                                android:textColor="@color/dark_blue"
                                android:textFontWeight="500"
                                android:textSize="16dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/margin_16"
                                android:gravity="end"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/heart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:src="@drawable/download" />

                                <ImageView
                                    android:id="@+id/download"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:layout_toStartOf="@+id/line"
                                    android:src="@drawable/dash" />

                                <ImageView
                                    android:id="@+id/line"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="@dimen/margin_2"
                                    android:src="@drawable/favred" />

                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/linear1"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="#E6E8EC">

                    </View>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="168dp"
                        android:layout_below="@+id/view"
                        android:layout_marginStart="@dimen/margin_13"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_13" />

                    <RelativeLayout
                        android:id="@+id/intgrator"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/viewPager"
                        android:layout_height="wrap_content">

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_30"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/margin_16"
                            android:elevation="4dp"
                            app:ci_drawable="@drawable/selecredcircle"
                            app:ci_drawable_unselected="@drawable/unselect"
                            app:ci_height="@dimen/margin_8"
                            app:ci_width="@dimen/size_8"
                            tools:ignore="MissingClass">

                        </me.relex.circleindicator.CircleIndicator>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/relative0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/intgrator"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_16">

                        <TextView
                            android:id="@+id/main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:maxLines="2"
                            android:text="Sunburn Reload NYE -    Toronto"
                            android:textColor="@color/dark_blue"
                            android:textFontWeight="700"
                            android:textSize="@dimen/size_24" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/main_text"
                            android:layout_marginTop="@dimen/margin_8"
                            android:fontFamily="@font/poppins_medium"
                            android:maxLines="2"
                            android:text="May 25  - Jul 30"
                            android:textColor="@color/heading_text"
                            android:textFontWeight="400"
                            android:textSize="@dimen/size_12" />


                        <LinearLayout
                            android:id="@+id/linear"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_below="@+id/date"
                            android:layout_marginTop="@dimen/margin_8"
                            android:background="@drawable/eventshape"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_10"
                                android:src="@drawable/mice" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Ticket sales end soon"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_12" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/date_time_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear"
                            android:layout_marginTop="@dimen/size_32"
                            android:fontFamily="@font/poppins_medium"
                            android:maxLines="2"
                            android:text="Select date, time &amp; location"
                            android:textColor="@color/dark_blue"
                            android:textFontWeight="700"
                            android:textSize="@dimen/size_24" />

                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@+id/date_time_location"
                            android:layout_marginTop="@dimen/margin_16"
                            android:background="@drawable/spinner_shape"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/date2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_12"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="May 25 - May 30"
                                android:textColor="@color/btn_text_color"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_12"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="6:00 AM - 7:00 AM"
                                android:textColor="@color/text_para_color"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_14" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_48"
                                android:gravity="center">

                                <Spinner
                                    android:id="@+id/spinner_arrow"
                                    android:layout_width="15dp"
                                    android:layout_height="10dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="@dimen/margin_35"
                                    android:background="@drawable/down" />
                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear3"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@+id/linear2"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edit_text_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/date3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_12"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Supermarket bar and Variety"
                                android:textColor="@color/btn_text_color"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:id="@+id/timeno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_12"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_para_color"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_14" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_48"
                                android:layout_marginStart="@dimen/margin_40"
                                android:gravity="center">

                                <Spinner
                                    android:id="@+id/spinner_arrow1"
                                    android:layout_width="15dp"
                                    android:layout_height="@dimen/margin_8"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="@dimen/margin_35"
                                    android:background="@drawable/down" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear4"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@+id/linear3"
                            android:layout_marginTop="@dimen/margin_16"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_8"
                                android:src="@drawable/calender" />

                            <TextView
                                android:id="@+id/date4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_12"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="May 25 - May 30"
                                android:textColor="@color/btn_text_color"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:id="@+id/time4"
                                android:layout_width="130dp"
                                android:layout_height="22dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_12"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="6:00 AM - 7:00 AM"
                                android:textColor="@color/text_para_color"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_14" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear5"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_below="@+id/linear4">

                            <TextView
                                android:id="@+id/datepick"
                                android:layout_width="144dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/size_10"
                                android:layout_marginEnd="@dimen/size_10"
                                android:background="@drawable/spinner_shape"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:padding="@dimen/size_10"
                                android:text="Add to calendar"
                                android:textColor="@color/blue_text"
                                android:textFontWeight="500"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/linear5"
                            android:layout_marginTop="@dimen/margin_16"
                            android:background="#E6E8EC" />

                        <RelativeLayout
                            android:id="@+id/linear6"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_below="@+id/view2"
                            android:layout_marginTop="@dimen/margin_16"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/location_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_8"
                                android:src="@drawable/location" />

                            <TextView
                                android:id="@+id/date6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_8"
                                android:layout_toRightOf="@+id/location_img"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Supermarket bar and Variety"
                                android:textColor="@color/btn_text_color"
                                android:textFontWeight="600"
                                android:textSize="@dimen/size_12" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_below="@+id/date6"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_35"
                                android:layout_marginEnd="@dimen/margin_12"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="268 Augusta Avenue, Toronto, ON M5T 219"
                                android:textColor="@color/text_para_color"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_12" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ShowMap"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_below="@+id/linear6"
                            android:layout_marginTop="@dimen/margin_8">

                            <TextView
                                android:layout_width="144dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/size_10"
                                android:layout_marginEnd="@dimen/size_10"
                                android:background="@drawable/spinner_shape"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:padding="@dimen/size_10"
                                android:text="Show Map"
                                android:textColor="@color/blue_text"
                                android:textFontWeight="500"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/linear7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ShowMap"
                            android:layout_marginTop="@dimen/margin_16"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/dolor_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_8"
                                android:src="@drawable/dolor" />

                            <TextView
                                android:id="@+id/refund"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_8"
                                android:layout_toRightOf="@+id/dolor_img"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Refund policy"
                                android:textColor="@color/btn_text_color"
                                android:textFontWeight="600"
                                android:textSize="@dimen/size_12" />

                            <TextView
                                android:id="@+id/refund_dis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/refund"
                                android:layout_gravity="center"
                                android:layout_marginStart="29dp"
                                android:autoSizeMaxTextSize="@dimen/margin_12"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Refunds up to 30 day(s) before event TG fee is non-refundable."
                                android:textColor="@color/text_para_color"
                                android:textFontWeight="400"
                                android:textSize="@dimen/size_12" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/linear7"
                            android:layout_marginTop="@dimen/margin_25"
                            android:background="#E6E8EC" />

                        <TextView
                            android:id="@+id/about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view3"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="About"
                            android:textColor="@color/dark_blue"
                            android:textFontWeight="700"
                            android:textSize="@dimen/text_18" />

                        <TextView
                            android:id="@+id/about_dis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/about"
                            android:layout_marginTop="@dimen/margin_8"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Lorem ipsum Dolor Sit Amet Consectetur. Ullamcorper Vel Erat Blandit Ut Dignissim Sit Lacus Consectetur Scelerisque. Ipsum Risus Cras Ultricies Ullamcorper."
                            android:textColor="@color/text_para_color"
                            android:textFontWeight="400"
                            android:textSize="@dimen/text_14" />


                        <LinearLayout
                            android:id="@+id/Read_more"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_below="@+id/about_dis"
                            android:layout_marginTop="@dimen/margin_12">

                            <TextView
                                android:layout_width="144dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/size_10"
                                android:layout_marginEnd="@dimen/size_10"
                                android:background="@drawable/spinner_shape"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:padding="@dimen/size_10"
                                android:text="Read more"
                                android:textColor="@color/blue_text"
                                android:textFontWeight="500"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/Read_more"
                            android:layout_marginTop="@dimen/margin_25"
                            android:background="#E6E8EC" />

                        <View
                            android:id="@+id/view5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/view4"
                            android:layout_marginTop="@dimen/margin_25"
                            android:background="#E6E8EC" />

                        <TextView
                            android:id="@+id/Organizer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view5"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Organizer"
                            android:textColor="@color/dark_blue"
                            android:textFontWeight="700"
                            android:textSize="@dimen/text_18" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Organizer"
                            android:layout_marginTop="@dimen/margin_16"
                            android:elevation="4dp"
                            app:cardCornerRadius="@dimen/size_10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="@dimen/margin_30"
                                    android:src="@drawable/man" />

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_8"
                                    android:fontFamily="@font/poppins_medium"
                                    android:maxLines="2"
                                    android:text="Tony chankar company"
                                    android:textColor="@color/btn_text_color"
                                    android:textFontWeight="600"
                                    android:textSize="@dimen/size_14" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:maxLines="2"
                                    android:text="1,742 followers"
                                    android:textColor="@color/text_para_color"
                                    android:textFontWeight="600"
                                    android:textSize="@dimen/size_14" />

                                <Button
                                    android:id="@+id/follow"
                                    android:layout_width="132dp"
                                    android:layout_height="32dp"
                                    android:layout_marginTop="@dimen/margin_30"
                                    android:layout_marginBottom="@dimen/margin_20"
                                    android:background="@drawable/bg_gradient"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Following"
                                    android:textAllCaps="false"
                                    android:textColor="@color/btn_text_color"
                                    android:textFontWeight="500"
                                    android:textSize="@dimen/size_14" />


                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <View
                            android:id="@+id/view6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/card"
                            android:layout_marginTop="@dimen/margin_25"
                            android:background="#E6E8EC"></View>

                        <TextView
                            android:id="@+id/Tags"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view6"
                            android:layout_marginTop="16dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Tags"
                            android:textColor="@color/dark_blue"
                            android:textFontWeight="700"
                            android:textSize="@dimen/text_18" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Tags"
                            android:orientation="horizontal">

                        </androidx.recyclerview.widget.RecyclerView>

                        <View
                            android:id="@+id/view7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@+id/recycler"
                            android:layout_marginTop="@dimen/margin_16"
                            android:background="#E6E8EC">

                        </View>

                        <TextView
                            android:id="@+id/Suggestions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view7"
                            android:layout_marginTop="24dp"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Suggestions for you"
                            android:textColor="@color/dark_blue"
                            android:textFontWeight="700"
                            android:textSize="@dimen/text_18" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Suggestions"
                            android:orientation="horizontal">

                        </androidx.recyclerview.widget.RecyclerView>

                    </RelativeLayout>


                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>
        </LinearLayout>


        <RelativeLayout
