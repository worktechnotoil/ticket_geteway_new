<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.technotoil.ticket.home.CustomerDetailModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"

        android:background="#F2F2F2"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

    <ScrollView
        android:id="@+id/bank_account_scroll_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.CustomerDetailsActivity">



    <ImageView
        android:id="@+id/ImageVie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/arrow"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/customerdetails"
        style="@style/mediumButtonText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Costume details"
        android:textAlignment="center"
        android:textColor="#0B2338"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




        <LinearLayout
            android:id="@+id/tabs"
            android:layout_below="@+id/customerdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shapefortabbar"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textFontWeight="500"
                android:text="Details"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/shapefortabbar"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_marginStart="@dimen/margin_5"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textFontWeight="500"
                android:text="Backline"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/margin_5"
                android:background="@drawable/shapefortabbar"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textFontWeight="500"
                android:text="Midline"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/margin_5"
                android:background="@drawable/shapefortabbar"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_medium"
                android:textFontWeight="500"
                android:text="Frontline"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@+id/tabs"
            android:src="@drawable/google"/>
    <TextView
        android:id="@+id/republic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jouvert Republic 2023"
        android:layout_below="@+id/img"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="18dp"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_medium"
        android:textFontWeight="500"
        android:textColor="#0B2338"/>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/republic"
        android:layout_marginStart="@dimen/margin_25"
        android:layout_marginEnd="@dimen/margin_25"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A5570"
            android:text="Frontline"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dash"
            android:layout_marginStart="@dimen/margin_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trini Revellers"
            android:textColor="@color/primary_color"
            android:layout_marginStart="@dimen/margin_10"/>
    </LinearLayout>
    <TextView
        android:id="@+id/discription"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_25"
        android:layout_marginEnd="@dimen/margin_25"
        android:text="Lorem ipsum dolor sit amet consectetur. blandit at quis enim...More"/>
<LinearLayout
    android:id="@+id/layout4"
    android:layout_below="@+id/discription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/margin_12"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/calender"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8"
        android:text="Jan 19 to Feb 19, 2023"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:src="@drawable/dash"
        android:layout_marginStart="@dimen/margin_8"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:src="@drawable/time"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:00 PM - 11:00 PM "
        android:layout_marginStart="@dimen/margin_8"/>

</LinearLayout>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$150 - $500"
        android:textSize="@dimen/text_18"
        android:layout_marginStart="@dimen/margin_25"
        android:textColor="#00322E"
        android:layout_marginTop="@dimen/margin_20"
        android:fontFamily="@font/poppins_medium"
        android:textFontWeight="500"
        android:layout_below="@+id/layout4"/>

    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/margin_25"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/layout4"
       >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:src="@drawable/download"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:src="@drawable/dash"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:src="@drawable/redheart"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="64k"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/amount"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_25"
        android:layout_marginEnd="@dimen/margin_25"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:text="Flexible Payment available"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabs2"
android:background="#F2F2F2"
        android:layout_below="@+id/layout6"
        android:layout_marginTop="@dimen/margin_18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:background="@drawable/shapfortabs"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="14dp"
            android:fontFamily="@font/poppins_medium"
            android:textFontWeight="500"
            android:text="Product Details"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/whiteshap"
            android:textColor="#5A6872"
            android:padding="10dp"
            android:layout_marginStart="@dimen/margin_5"
            android:textSize="14dp"
            android:fontFamily="@font/poppins_medium"
            android:textFontWeight="500"
            android:text="Delivery"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_5"
            android:background="@drawable/whiteshap"
            android:textColor="#5A6872"
            android:padding="10dp"
            android:textSize="14dp"
            android:fontFamily="@font/poppins_medium"
            android:textFontWeight="500"
            android:text="Returns"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_5"
            android:background="@drawable/whiteshap"
            android:textColor="#5A6872"
            android:padding="10dp"
            android:textSize="14dp"
            android:fontFamily="@font/poppins_medium"
            android:textFontWeight="500"
            android:text="Frontline"/>

    </LinearLayout>
    <TextView
        android:id="@+id/dis2"
        android:layout_below="@+id/tabs2"
        android:layout_marginTop="@dimen/margin_18"
        android:layout_marginStart="@dimen/margin_25"
        android:layout_marginEnd="@dimen/margin_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:text="Lorem ipsum dolor sit amet consectetur. Ut blandit at quis malesuada augue enim volutpat molestie a. Tortor eu ac parturient arcu at. Quis augue leo scelerisque fermentum enim nulla vitae ultrices."/>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/dis2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:id="@+id/text1"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_25"
            android:text="Parade Location"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>



</RelativeLayout>
    </ScrollView>
    </LinearLayout>
</layout>