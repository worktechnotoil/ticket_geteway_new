<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.technotoil.ticket.homefragments.Homedata" />
    </data>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_60"
    android:background="@color/background_main">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/bank_account_scroll_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Events near Toronto"
                    android:textColor="#0B2338"
                    android:textFontWeight="700"
                    android:textSize="@dimen/text_18" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heading">

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:id="@+id/viewmoretext"
                    android:layout_below="@+id/recycler"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/viewmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_18"
                        android:fontFamily="@font/poppins_medium"
                        android:textFontWeight="400"
                        android:textColor="@color/blue_text"
                        android:text="View more events"/>
                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/left"
                      />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/category_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00322E"
                    android:layout_marginTop="26dp"

                    android:layout_below="@+id/viewmoretext"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse by categories"
                        android:textSize="@dimen/text_18"
                        android:fontFamily="@font/poppins_medium"
                        android:textFontWeight="700"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginTop="@dimen/size_24"
                        android:textColor="@color/white"/>

<!--                    <GridView-->
<!--                        android:id="@+id/idGRV"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:horizontalSpacing="6dp"-->
<!--                        android:numColumns="2"-->
<!--                        android:verticalSpacing="6dp" />-->

                    <LinearLayout
                        android:id="@+id/ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_15"
                        android:weightSum="2"
                        android:layout_marginStart="@dimen/margin_15"
                        android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/margin_8"
                                android:src="@drawable/sport">
                            </ImageView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                              android:layout_weight="1"
                                android:layout_marginStart="@dimen/margin_8"
                                android:src="@drawable/sport">
                            </ImageView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_15"
                        android:layout_marginStart="@dimen/margin_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:src="@drawable/sport">
                        </ImageView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_8"
                            android:src="@drawable/sport">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_15"
                        android:layout_marginStart="@dimen/margin_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:src="@drawable/sport">
                        </ImageView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_8"
                            android:src="@drawable/sport">
                        </ImageView>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_15"
                        android:layout_marginStart="@dimen/margin_15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:src="@drawable/sport">
                        </ImageView>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/margin_8"
                            android:src="@drawable/sport">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_24"/>
                </LinearLayout>
                
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/category_main"
    android:layout_marginTop="@dimen/size_24"
    android:id="@+id/recycler2">

</androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:id="@+id/viewmoretext2"
                    android:layout_below="@+id/recycler2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/viewmore2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_18"
                        android:fontFamily="@font/poppins_medium"
                        android:textFontWeight="400"
                        android:textColor="@color/blue_text"
                        android:text="View more events"/>
                    <ImageView
                        android:id="@+id/arrow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:src="@drawable/left"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/horizontal_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewmoretext2"
                    android:layout_marginTop="@dimen/margin_16"
                    android:background="@color/background_main"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginTop="@dimen/margin_16"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Organizers to follow"
                        android:textColor="@color/heading_text"
                        android:textFontWeight="500"
                        android:textSize="@dimen/size_14" />

                    <TextView
                        android:id="@+id/see_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/margin_16"
                        android:layout_marginEnd="28dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="See all"
                        android:textColor="@color/blue_text"
                        android:textFontWeight="500"
                        android:textSize="@dimen/size_14" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/see_all">

                    </androidx.recyclerview.widget.RecyclerView>
                </RelativeLayout>


                </RelativeLayout>


        </androidx.core.widget.NestedScrollView>
</LinearLayout>
    </layout>